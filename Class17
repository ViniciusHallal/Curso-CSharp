namespace Aula17;

public class Program
{
    public static void Main()
    {
        Console.WriteLine("------- Listas -------\n");

        String separator = "----------------------";

        //1. Declaration with values
        List<string> fruits = new List<string>()
        {
            "Manga",
            "Abacaxi",
            "Pera"
        };

        //2. Acess to values
        Console.WriteLine(fruits[1]);

        Console.WriteLine(separator);

        foreach(string fruit in fruits)
        {
            Console.WriteLine(fruit);
        }

        //3. Add values
        Console.WriteLine(separator);
        fruits.Add("Lim√£o");
        fruits.Add("Uva");

        foreach (string fruit in fruits)
        {
            Console.WriteLine(fruit);
        }

        //4. Remove values
        Console.WriteLine(separator);
        fruits.Remove(fruits[3]);

        foreach (string fruit in fruits)
        {
            Console.WriteLine(fruit);
        }

        //5. Count of values
        Console.WriteLine(separator);
        Console.WriteLine($"Quantidade de frutas: {fruits.Count}");

        //6. Modify values
        Console.WriteLine(separator);
        fruits[2] = "Maracuja";

        foreach (string fruit in fruits)
        {
            Console.WriteLine(fruit);
        }

        //7. Clear values
        Console.WriteLine(separator);
        fruits.Clear();

        //8. Declaration without values
        Console.WriteLine(separator);
        List<int> numbers = new List<int>();

        numbers.Add(1);
        numbers.Add(50);
        numbers.Add(100);

        foreach (int number in numbers)
        {
            Console.WriteLine(number);
        }
    }
}
